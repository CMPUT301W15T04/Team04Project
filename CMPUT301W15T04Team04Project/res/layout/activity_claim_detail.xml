<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.cmput301w15t04team04project.ClaimDetailActivity" >

    <TextView
        android:id="@+id/showStartDateCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showClaimNameCTextView"
        android:layout_below="@+id/showClaimNameCTextView"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/currentClaimNameCTextView"
        android:text="Start Date:"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/showItemAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showStartDateCTextView"
        android:layout_below="@+id/showStartDateCTextView"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/currentClaimNameCTextView"
        android:text="End Date:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/showClaimStatusCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/showItemAmountTextView"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/currentClaimNameCTextView"
        android:text="Status:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/showClaimTagsCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/showClaimStatusCTextView"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/currentClaimNameCTextView"
        android:text="Tags:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <ListView
        android:id="@+id/showClaimTagsCListView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/showClaimTagsCTextView"
        tools:ignore="RtlHardcoded" >

    </ListView>

    <TextView
        android:id="@+id/showDestinamtionsCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showClaimTagsCListView"
        android:layout_below="@+id/showClaimTagsCListView"
        android:layout_marginTop="15dp"
        android:text="Destinations:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <ListView
        android:id="@+id/showDestinationCListView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/showDestinamtionsCTextView" >

    </ListView>

    <TextView
        android:id="@+id/currentClaimSDCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showStartDateCTextView"
        android:layout_alignBottom="@+id/showStartDateCTextView"
        android:layout_alignLeft="@+id/currentClaimNameCTextView"
        android:text="MMM-DD-YYYY"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentClaimEDCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showItemAmountTextView"
        android:layout_alignBottom="@+id/showItemAmountTextView"
        android:layout_alignLeft="@+id/currentClaimSDCTextView"
        android:text="MMM-DD-YYYY"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentClaimStatusCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/showClaimStatusCTextView"
        android:layout_alignLeft="@+id/currentClaimEDCTextView"
        android:text="Processing"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentClaimNameCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showStartDateCTextView"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/showDestinamtionsCTextView"
        android:text="The Name of the Claim"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/showClaimDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Claim Detail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/showClaimNameCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showClaimStatusCTextView"
        android:layout_below="@+id/showClaimDetailTextView"
        android:layout_marginTop="15dp"
        android:text="Claim Name:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />

</RelativeLayout>
