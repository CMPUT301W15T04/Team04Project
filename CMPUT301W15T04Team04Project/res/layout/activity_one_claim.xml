<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.cmput301w15t04team04project.OneClaimActivity" >

    <TextView
        android:id="@+id/testClaimantTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:clickable="true"
        android:onClick="showClaimDetailC"
        android:text="Claimant Show Claim Detail"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/testApproverTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/testClaimantTextView"
        android:layout_below="@+id/testClaimantTextView"
        android:layout_marginTop="58dp"
        android:clickable="true"
        android:onClick="showClaimDetailA"
        android:text="Approver Show Claim Detail"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/textViewItemDC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/testApproverTextView"
        android:layout_marginTop="63dp"
        android:clickable="true"
        android:onClick="showItemDetailC"
        android:text="Show Item Detail Claimant"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/textViewItemDA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewItemDC"
        android:layout_below="@+id/textViewItemDC"
        android:layout_marginTop="56dp"
        android:clickable="true"
        android:onClick="showItemDetailA"
        android:text="Show Item Detail Approver"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <ListView
        android:id="@+id/OneCaimItemlistView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewItemDA"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textViewItemDA" >

    </ListView>

</RelativeLayout>
